<div class="container" style="min-height:600px">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <br />
            <button data-toggle="modal" data-target="#addModal" class="btn btn-info">Add Employee</button>
            <% if(result.length > 0){ %>
            <table class="table table-dark mt-4">
                <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>Salary</th>
                    <th>City</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% result.forEach((x, n)=>{ %>
                    <tr>
                        <td><%= n+1 %></td>
                        <td><%= x.name %></td>
                        <td><%= x.salary %></td>
                        <td><%= x.city %></td>
                        <td><a class="btn btn-warning btn-sm" href="/employee/edit/<%= x._id %>">Edit</a></td>
                        <td><a class="btn btn-danger btn-sm" href="/employee/delete/<%= x._id %>">Delete</a></td>
                    </tr>
                <% }) %>
            </table>
            <% }else{ %>

                <div class="alert alert-danger mt-4">No Data Found</div>
            <% } %>
        </div>
    </div>
</div>

<div class="modal fade" id="addModal">
    <div class="modal-dialog">
        <form action="/employee" method="post">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add New Employee</h3>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" name="name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>City</label>
                    <select name="city" class="form-control">
                        <option>Select</option>
                        <% city.forEach((x)=>{ %>
                            <option><%= x.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label>Salary</label>
                    <input type="text" name="salary" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-success" >Save</button>
            </div>

        </div>
        </form>
    </div>
</div>