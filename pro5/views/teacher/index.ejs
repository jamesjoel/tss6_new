<div class="container" style="min-height: 700px;">
    <h1>Teacher Page</h1>
    
    <br />
    <button class="btn btn-info" data-toggle="modal" data-target="#addModal">Add Teacher</button>
    <table class="table mt-4 table-dark table-hover table-bordered table-striped">
        <tr>
            <th>S.No.</th>
            <th>Name</th>
            <th>Salary</th>
            <th>Detail</th>
            
        </tr>
        <% result.forEach((x, n)=>{ %>
            <tr>
                <td><%= n+1 %></td>
                <td><%= x.name %></td>
                <td><%= x.salary %></td>
                <td><a href="/teacher/detail/<%= x._id %>" class="btn btn-info btn-sm">Detail</a></td>
            
            </tr>
        <% }) %>
    </table>

</div>


<div class="modal fade" id="addModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/teacher/add" method="post">
            <div class="modal-header">
                <h3>Add New Teacher</h3>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" name="name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Salary</label>
                    <input type="text" name="salary" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Class</label>
                    <select class="form-control" name="class">
                        <option>Select</option>
                        <option>UKG</option>
                        <option>KG-I</option>
                        <option>KG-II</option>
                        <% for(var i=1; i<=12; i++){ %>
                            <option><%= i %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <textarea class="form-control" name="address"></textarea>
                </div>
                <div class="form-group">
                    <label>Gender</label>
                    <Br />
                    Male <input type="radio" value="male"  name="gender"/>
                    Female <input type="radio" value="female" name="gender"/>
                </div>
                <div class="form-group">
                    <label>City</label>
                    <select class="form-control" name="city">
                        <option>Select</option>
                        <option>Mumbai</option>
                        <option>Pune</option>
                        <option>Delhi</option>
                        <option>Bhopal</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" type="button" data-dismiss="modal">Close</button>
                <button class="btn btn-success" type="submit" >Submit</button>
            </div>
            </form>
        </div>
    </div>
</div>