<div class="container" style="min-height:600px">
    <form action="/employee/update/<%= result._id %>" method="post">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" value="<%= result.name %>" name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label>City</label>
                <select name="city" class="form-control">
                    <option>Select</option>
                    <% city.forEach((x)=>{ %>
                        <option <% if(result.city == x.name){ %>  selected  <% } %> ><%= x.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group">
                <label>Salary</label>
                <input type="text" value="<%= result.salary %>" name="salary" class="form-control" />
            </div>
            <Br />
            <Br />
            <a href="/employee" class="btn btn-info">Back</a>
            <input type="submit" value="Update" class="btn btn-success" />
        
        </div>
    </div>
</form>
</div>
